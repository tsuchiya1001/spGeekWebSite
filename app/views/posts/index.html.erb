<h3>プロダクト一覧</h3>
<%= link_to "新規投稿へ", new_post_path %>
<div class="post-container">
  <% @posts.each do |p| %>
    <div class="post">
      <%= image_tag p.image_url, size: "250x200" if p.image? %>
      <%= p.title %>
      <a href="p.link"><%= p.link %></a>
      <%= p.period %>
      <%= p.creator %>
      <%= p.detail%>
    </div>
    <%= link_to "詳細へ", post_path(p.id) %>
  <% end %>
</div>